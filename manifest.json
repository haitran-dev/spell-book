{
	"manifest_version": 3,
	"author": "Hai Tran",
	"name": "Visual dictionary",
	"description": "Powerful dictionary tool to help learning English",
	"version": "1.1.0",
	"action": {
		"default_icon": {
			"16": "icons/magic-book.png",
			"32": "icons/magic-book.png",
			"48": "icons/magic-book.png",
			"128": "icons/magic-book.png"
		},
		"default_popup": "popup/index.html",
		"default_title": "A powerful visual english dictionary"
	},
	"icons": {
		"16": "icons/magic-book.png",
		"48": "icons/magic-book.png",
		"128": "icons/magic-book.png"
	},
	"background": {
		"service_worker": "service-worker.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"js": ["content.js"],
			"matches": ["https://*/*"]
		}
	],
	"permissions": ["contextMenus", "storage", "tabs", "scripting", "activeTab"],
	"host_permissions": ["https://*/*"]
}
