{
	"manifest_version": 3,
	"author": "Hai Tran",
	"name": "Visual dictionary",
	"description": "Powerful dictionary tool to help learning English",
	"version": "1.1.0",
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "A powerful visual english dictionary"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"permissions": ["contextMenus"],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["contentScript.js"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["*.png", "*.jpg"],
			"matches": ["http://*/*", "https://*/*"]
		}
	]
}
